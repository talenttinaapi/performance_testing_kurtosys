{
  "family": "jmeter-master-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "jmeter-master",
      "image": "yourrepo/jmeter:latest",
      "essential": true,
      "command": [
        "jmeter",
        "-n",
        "-t",
        "/test/testplan.jmx",
        "-R",
        "jmeter-slave1,jmeter-slave2",
        "-l",
        "results.jtl",
        "-e",
        "-o",
        "reports"
      ],
      "mountPoints": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/jmeter",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "jmeter"
        }
      }
    }
  ]
}